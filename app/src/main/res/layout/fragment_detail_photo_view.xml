<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:context=".domain2.view.search.food.detail.fragment.DetailPhotoViewFragment">

    <ImageView
        android:id="@+id/detailPhotoFragment_productImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/plim_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailPhotoFragment_likeButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintStart_toEndOf="@+id/detailPhotoFragment_shareButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailPhotoFragment_shareButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/share_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
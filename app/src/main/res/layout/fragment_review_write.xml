<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:context=".domain.view.search.food.detail.fragment.ReviewWriteFragment">

    <Button
        android:id="@+id/writeReviewFragment_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/writeReviewFragment_productImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:background="@drawable/food_round_rect"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/writeReviewFragment_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="제품명"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_productImageView"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/writeReviewFragment_manufacturerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="회사명"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_productImageView"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productName" />

    <ImageView
        android:id="@+id/writeReviewFragment_star3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/writeReviewFragment_star2"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_star2"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productImageView" />

    <ImageView
        android:id="@+id/writeReviewFragment_star4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/writeReviewFragment_star3"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_star3"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productImageView" />

    <ImageView
        android:id="@+id/writeReviewFragment_star2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/writeReviewFragment_star1"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_star1"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productImageView" />

    <ImageView
        android:id="@+id/writeReviewFragment_star5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/writeReviewFragment_star4"
        app:layout_constraintStart_toEndOf="@+id/writeReviewFragment_star4"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productImageView" />

    <ImageView
        android:id="@+id/writeReviewFragment_star1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_productImageView" />

    <EditText
        android:id="@+id/writeReviewFragment_writeReviewEditText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewFragment_star3"
        tools:inputType="textMultiLine" />

</androidx.constraintlayout.widget.ConstraintLayout>